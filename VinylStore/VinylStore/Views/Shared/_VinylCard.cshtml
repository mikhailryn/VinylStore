@model Vinyl

<div class="col-lg-4 col-md-6 mb-4">


        <div class="thumbnail">

            <img src="@Model.ImageThumbnailUrl" alt="">
            <div class="caption">
                <h3 class="pull-right">@Model.Price.ToString("c")</h3>
                <h3>
                    <a asp-controller="Vinyl" asp-action="Details" asp-route-id="@Model.VinylId">@Model.Album.Artist.ArtistName</a>
                </h3>
                <p>@Model.ShortDescription</p>
            </div>

            @*<div>
                @Model.Album.Artist.ArtistName

            </div>*@

            <div class="addToCart">
                <p class="button">
                    <a class="btn btn-primary"
                       asp-controller="ShoppingCart"
                       asp-action="AddToShoppingCart"
                       asp-route-vinylId="@Model.VinylId">Add to cart</a>
                </p>
            </div>


        </div>


    </div>

