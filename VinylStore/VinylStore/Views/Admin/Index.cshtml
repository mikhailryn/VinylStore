@model IEnumerable<Vinyl>
@*@{
    ViewBag.Title = "All Vinyl";
    Layout = "_AdminLayout";
}*@

@if (TempData["message"] != null)
{
    <div class="alert alert-success mt-1">@TempData["message"]</div>
}

<br />
<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-right">ID</th>
        <th>Name</th>
        <th class="text-right">Price</th>
        <th class="text-center">Actions</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td class="text-right">@item.VinylId</td>
            <td>@item.Album.AlbumName</td> 
            <td class="text-right">@item.Price.ToString("c")</td>
            <td class="text-center">
                <form asp-action="Delete" method="post">
                    <a asp-action="Edit" class="btn btn-sm btn-warning"
                       asp-route-vinylId="@item.VinylId">
                        Edit
                    </a>
                    <input type="hidden" name="VinylId" value="@item.VinylId" />
                    <button type="submit" class="btn btn-danger btn-sm">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
<div class="text-center">
    <a asp-action="Create" class="btn btn-primary">Add Product</a>
    <a asp-controller="Roles" asp-action="Index" class="btn btn-primary"><span class="glyphicon glyphicon-user"></span>Role manage</a>

</div>

