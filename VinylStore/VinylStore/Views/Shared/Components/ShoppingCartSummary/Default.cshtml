@model ShoppingCartViewModel

@if (Model.ShoppingCart.ShoppingCartItems.Count > 0)
{
    <ul class="nav navbar-nav navbar-right">

        <li>
            <a asp-controller="ShoppingCart" asp-action="Index" class="nav-link">
                
                <span class="glyphicon glyphicon-shopping-cart">&#128722;</span>
                <span id="cart-status">
                    @Model.ShoppingCart.ShoppingCartItems.Count item(s)
                    @Model.ShoppingCart.GetShoppingCartTotal().ToString("c")
                </span>
            </a>
        </li>

        </ul>

        }
